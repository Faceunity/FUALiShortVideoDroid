<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/aliyun_color_bg"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <include layout="@layout/aliyun_svideo_view_action_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="right|center"
            android:text="@string/aliyun_min_record_duration"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/aliyun_min_duration_edit"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/aliyun_svideo_shape_rect_gray"
            android:hint="@string/aliyun_min_record_duration_hint"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="14sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="right|center"
            android:text="@string/aliyun_max_record_duration"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/aliyun_max_duration_edit"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/aliyun_svideo_shape_rect_gray"
            android:hint="@string/aliyun_max_record_duration_hint"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="14sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="right|center"
            android:text="@string/aliyun_gop"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/aliyun_gop_edit"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/aliyun_svideo_shape_rect_gray"
            android:hint="@string/aliyun_gop_hint"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="right|center"
            android:text="@string/aliyun_bitrate"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/aliyun_bitrate_edit"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/aliyun_svideo_shape_rect_gray"
            android:hint="@string/aliyun_bitrate_hint"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="right|center"
            android:text="@string/aliyun_video_quality"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>

        <SeekBar
            android:id="@+id/aliyun_quality_seekbar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:maxHeight="5dp"
            android:minHeight="5dp"
            android:progressDrawable="@drawable/aliyun_svideo_seekbar_drawable"
            android:thumb="@drawable/aliyun_svideo_seekbar_thum"/>

        <TextView
            android:id="@+id/aliyun_quality_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="222*2222"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="right|center"
            android:text="@string/aliyun_resolution"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>

        <SeekBar
            android:id="@+id/aliyun_resolution_seekbar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:maxHeight="5dp"
            android:minHeight="5dp"
            android:progress="50"
            android:progressDrawable="@drawable/aliyun_svideo_seekbar_drawable"
            android:thumb="@drawable/aliyun_svideo_seekbar_thum"/>

        <TextView
            android:id="@+id/aliyun_resolution_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="222*2222"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="right|center"
            android:text="@string/aliyun_ratio"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>

        <SeekBar
            android:id="@+id/aliyun_ratio_seekbar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:maxHeight="5dp"
            android:minHeight="5dp"
            android:progress="50"
            android:progressDrawable="@drawable/aliyun_svideo_seekbar_drawable"
            android:thumb="@drawable/aliyun_svideo_seekbar_thum"/>

        <TextView
            android:id="@+id/aliyun_ratio_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="222*2222"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>
    </LinearLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
        <TextView android:id="@+id/tv_video_codec"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="5dp"
                  android:gravity="right|center"
                  android:text="@string/aliyun_video_codec"
                  android:textColor="@android:color/white"
                  android:textSize="14sp"
        />

        <SeekBar
            android:id="@+id/aliyun_video_codec_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tv_video_codec"
            android:layout_toRightOf="@+id/tv_video_codec"
            android:maxHeight="5dp"
            android:minHeight="5dp"
            android:progress="0" android:progressDrawable="@drawable/aliyun_svideo_seekbar_drawable"
            android:thumb="@drawable/aliyun_svideo_seekbar_thum"
            android:max="2"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/aliyun_video_codec_seekbar"
            android:layout_toRightOf="@id/tv_video_codec"
            android:maxHeight="5dp"
            android:minHeight="5dp"
            android:orientation="horizontal"
        >
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="@string/aliyun_hardware_encoder"
                      android:textColor="@android:color/white"
                      android:textSize="11sp"
            />
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="@string/aliyun_openh264_encoder"
                      android:textColor="@android:color/white"
                      android:textSize="11sp"
                      android:gravity="center"
            />
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="@string/aliyun_ffmpeg_encoder"
                      android:textColor="@android:color/white"
                      android:textSize="11sp"
                      android:gravity="right"
            />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/aliyun_start_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/aliyun_seek_bar_theme"
        android:padding="10dp"
        android:text="@string/aliyun_start_record"
        android:textColor="@android:color/white"/>
</LinearLayout>
