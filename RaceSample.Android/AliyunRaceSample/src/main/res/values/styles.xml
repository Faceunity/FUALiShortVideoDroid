<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.NoActionBar.Fullscreen"/>



    <style name="record_bottom_dialog_animation">
        <item name="android:windowEnterAnimation">@anim/aliyun_video_anim_trans_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/aliyun_video_anim_layout_bottom_out</item>
    </style>


    <style name="BeautyLevelBtnStyle">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/alivc_beauty_default_bt_selector</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/alivc_common_font_14</item>
    </style>

    <style name="QUDemoFullStyle" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- 美颜底部tab style-->
    <style name="BeautyChangeTabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:drawableBottom">@mipmap/alivc_beauty_level_tab_checked</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:textSize">@dimen/alivc_common_font_14</item>
        <item name="android:textColor">@color/alivc_beauty_level_text_selector</item>
    </style>


    <!-- 美颜美肌微调按钮 style-->
    <style name="BeautyDetailBtnStyle">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/alivc_beauty_default_bt_selector</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10.5dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/alivc_common_font_14</item>
    </style>


    <!-- 美颜美肌微调按钮文字 style-->
    <style name="BeautyDetailTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">10.5dp</item>
        <item name="android:textColor">#c3c5c6</item>
        <item name="android:textSize">@dimen/alivc_common_font_12</item>

    </style>

</resources>
