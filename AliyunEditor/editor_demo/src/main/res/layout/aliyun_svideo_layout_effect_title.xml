<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/paint_menu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottom_editor_tab_height"
                android:gravity="center_vertical"
                >

    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="44dp"
        android:layout_height="24dp"
        android:layout_marginLeft="10dp"
        android:paddingRight="25dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/aliyun_svideo_icon_effect_cancel"
        />

    <TextView
        android:id="@+id/tv_effect_title"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:textColor="@color/white_alpha_0"
        android:textSize="14sp"
        />

    <ImageView
        android:id="@+id/iv_effect_icon"
        android:layout_width="17dp"
        android:layout_height="13dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/tv_effect_title"
        />

    <ImageView
        android:id="@+id/iv_confirm"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/aliyun_svideo_icon_effect_confirm"
        />

    <include layout="@layout/aliyun_svideo_layout_split_line"/>
</RelativeLayout>