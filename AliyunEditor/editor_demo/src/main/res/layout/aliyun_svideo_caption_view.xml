<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/effect_list"
        android:layout_width="match_parent"
        android:background="@color/action_bar_bg"
        android:overScrollMode="never"
        android:layout_height="@dimen/effect_list_view_size"/>
    <RelativeLayout
        android:id="@+id/caption_dismiss"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_editor_tab_height"
        android:background="@color/tab_bg_color"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/cancel"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/aliyun_svideo_none_emoj"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/category_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/cancel"
            android:layout_toLeftOf="@+id/dismiss"
            android:overScrollMode="never"/>
        <ImageView
            android:id="@+id/dismiss"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/aliyun_svideo_dismiss"/>
    </RelativeLayout>
</LinearLayout>