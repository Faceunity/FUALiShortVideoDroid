<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/alivc_chooser_pager_bg"
              android:orientation="vertical">

    <include layout="@layout/aliyun_svideo_layout_effect_title"/>

    <FrameLayout
        android:id="@+id/fl_thumblinebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/effect_list"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:overScrollMode="never"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/category_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_editor_effect_category_tab_height"
            android:overScrollMode="never"
            android:background="@color/white_alpha_10"
            />
</LinearLayout>