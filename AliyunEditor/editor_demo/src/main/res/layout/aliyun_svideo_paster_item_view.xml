<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"

    >

    <FrameLayout
        android:id="@+id/resource_image"
        android:layout_width="@dimen/bottom_editor_effect_tab"
        android:layout_height="@dimen/bottom_editor_effect_tab">

        <com.aliyun.svideo.base.widget.CircularImageView
            android:id="@+id/resource_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside"/>
    </FrameLayout>
</LinearLayout>