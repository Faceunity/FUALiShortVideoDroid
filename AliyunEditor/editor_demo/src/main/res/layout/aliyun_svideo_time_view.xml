<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/alivc_svideo_effect_height"
    android:orientation="vertical"
    android:background="@color/alivc_chooser_pager_bg">
    <include
        layout="@layout/alivc_svideo_effect_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_editor_tab_height"/>
    <FrameLayout
        android:id="@+id/fl_thumblinebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:text="@string/alivc_svideo_time_tip"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:textSize="11sp"
        android:layout_height="@dimen/alivc_svideo_effect_tip_height" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/time_effect_none"
                android:layout_width="@dimen/alivc_svideo_effect_icon_wh"
                android:layout_height="@dimen/alivc_svideo_effect_icon_wh"
                android:src="@drawable/aliyun_svideo_video_edit_time_none_selector" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/alivc_svideo_text_gray_light"
                android:text="@string/alivc_svideo_no_effect"/>

        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/time_effect_slow"
                android:layout_width="@dimen/alivc_svideo_effect_icon_wh"
                android:layout_height="@dimen/alivc_svideo_effect_icon_wh"
                android:src="@drawable/aliyun_svideo_video_edit_time_slow_selector"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/alivc_svideo_text_gray_light"
                android:text="@string/alivc_svideo_slow"/>

        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/time_effect_speed_up"
                android:layout_width="@dimen/alivc_svideo_effect_icon_wh"
                android:layout_height="@dimen/alivc_svideo_effect_icon_wh"
                android:src="@drawable/aliyun_svideo_video_edit_time_fast_selector" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/alivc_svideo_text_gray_light"
                android:text="@string/alivc_svideo_fast"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/time_effect_repeat_invert"
                android:layout_width="@dimen/alivc_svideo_effect_icon_wh"
                android:layout_height="@dimen/alivc_svideo_effect_icon_wh"
                android:src="@drawable/aliyun_svideo_video_edit_time_invert_selector" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/alivc_svideo_text_gray_light"
                android:text="@string/alivc_svideo_invert"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/time_effect_repeat"
                android:layout_width="@dimen/alivc_svideo_effect_icon_wh"

                android:layout_height="@dimen/alivc_svideo_effect_icon_wh"
                android:src="@drawable/aliyun_svideo_video_edit_time_repeat_selector" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/alivc_svideo_text_gray_light"
                android:text="@string/alivc_svideo_repeat"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>