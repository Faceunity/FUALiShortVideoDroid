<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/qupai_black_opacity_70pct">

    <com.aliyun.quview.SquareFrameLayout
        android:id="@+id/imv_video_view"
        android:layout_width="match_parent"
        android:layout_height="0dp" >

    </com.aliyun.quview.SquareFrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="43dp">
        <ImageView
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:src="@drawable/aliyun_svideo_bg_parser_preview_cancel_rect"
            android:id="@+id/iv_imv_close_btn"/>
    </LinearLayout>

</LinearLayout>