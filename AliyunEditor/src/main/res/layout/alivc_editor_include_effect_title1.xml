<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/paint_menu"
    android:layout_width="match_parent"
    android:layout_height="@dimen/alivc_editor_dialog_effect_tittle_height"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="@dimen/alivc_common_width_icon_44"
        android:layout_height="@dimen/alivc_common_height_icon_24"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/alivc_common_margin_10"
        android:paddingRight="@dimen/alivc_common_padding_25"
        android:src="@mipmap/aliyun_svideo_icon_effect_cancel" />

    <TextView
        android:id="@+id/tv_effect_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/alivc_common_height_icon_24"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingLeft="@dimen/alivc_common_padding_5"
        android:textColor="@color/alivc_common_font_white"
        android:textSize="@dimen/alivc_common_font_14" />

    <ImageView
        android:id="@+id/iv_effect_icon"
        android:layout_width="@dimen/alivc_common_font_17"
        android:layout_height="@dimen/alivc_common_height_icon_13"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/tv_effect_title" />

    <ImageView
        android:id="@+id/iv_confirm"
        android:layout_width="@dimen/alivc_common_size_icon_24"
        android:layout_height="@dimen/alivc_common_size_icon_24"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/alivc_common_margin_10"
        android:src="@mipmap/aliyun_svideo_icon_effect_confirm" />

    <include layout="@layout/alivc_editor_include_split_line" />
</RelativeLayout>