<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/alivc_common_bg_black_alpha_70"
              android:orientation="vertical">

    <include layout="@layout/alivc_editor_include_effect_title1"/>

    <FrameLayout
        android:id="@+id/fl_thumblinebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/alivc_common_margin_3"/>

    <com.aliyun.svideo.base.widget.pagerecyclerview.PageRecyclerView
        android:id="@+id/effect_overlay_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alivc_common_height_group_80"
        android:layout_marginTop="@dimen/alivc_common_margin_10"
        android:layout_marginBottom="@dimen/alivc_common_margin_10"
        />

    <com.aliyun.svideo.base.widget.pagerecyclerview.PageIndicatorView
        android:id="@+id/view_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/category_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/alivc_common_height_group_38"
            android:overScrollMode="never"
            android:background="@color/alivc_common_bg_white_alpha_10"
            />
</LinearLayout>